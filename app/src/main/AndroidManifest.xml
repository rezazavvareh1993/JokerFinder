<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jokerfinder">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/joker_main_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/joker_main_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.jokerfinder.features.startpage.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.jokerfinder.features.moviedetails.MovieDetailsActivity"></activity>
        <activity android:name="com.example.jokerfinder.features.searchmovie.SearchMovieActivity">
        </activity>
    </application>

</manifest>